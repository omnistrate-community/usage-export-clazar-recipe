# Update this file with your actual values
# Docker Compose will automatically load variables from .env file

# Required Configuration
S3_BUCKET_NAME=your-s3-bucket-name
SERVICE_NAME=your-service-name
ENVIRONMENT_TYPE=your-environment-type
PLAN_ID=your-plan-id
CLAZAR_CLIENT_ID=your-clazar-client-id
CLAZAR_CLIENT_SECRET=your-clazar-client-secret
CLAZAR_CLOUD=aws # or gcp, azure, depending on your marketplace cloud

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Optional Configuration (with defaults)
CLAZAR_API_URL=https://api.clazar.io/metering/
STATE_FILE_PATH=metering_state.json
MAX_MONTHS_PER_RUN=12
DRY_RUN=false
